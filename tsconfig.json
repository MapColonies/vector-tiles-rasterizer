{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./types",
      "/node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
